enum FlightStatus {
  TICKETED
  CANCELED
  PENDING
}

model Flight {
  flightId       String       @id @default(uuid())
  pnr            String       @unique
  status         FlightStatus
  total          Float
  currency       String
  passengerName  String
  passengerEmail String
  itineraryId    String

  createdAt DateTime @default(now())
}

enum HotelStatus {
  BOOKED
  CANCELED
  PENDING
}

model Hotel {
  hotelId        String      @id @default(uuid())
  reservation_id String      @unique
  status         HotelStatus
  total          Float
  currency       String
  guestName      String
  guestEmail     String
  checkIn        DateTime
  checkout       DateTime
  createdAt      DateTime    @default(now())
}

