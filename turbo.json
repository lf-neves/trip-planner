{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "dev": {
      "dependsOn": ["^dev"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:unit": {
      "dependsOn": ["^test:unit"]
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"]
    }
  }
}
